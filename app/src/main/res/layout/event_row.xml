<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="event"
            type="arboretum.arboretumwojslawice.Model.businessentity.Event"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/event_date_begin_date"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@{event.getBeginDateString()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/event_date_end_date"
            android:layout_width="75dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text='@{event.getDateEnd() != 0 ? "-" + event.getEndDateString() : ""}'
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_date_begin_date" />

        <TextView
            android:id="@+id/event_name"
            android:layout_width="0dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_date_begin_date"
            android:text='@{event.getType() + " / " + event.getName()}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/event_date_begin_date"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>