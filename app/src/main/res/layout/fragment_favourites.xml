<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arboretum.arboretumwojslawice.View.fragments.FavouritesFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/favourite_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginBottom="8dp"
        android:paddingBottom="2dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/noFavouriteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/nonrec_font_size"
        android:textColor="@color/darkTextDarkGray"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
        android:text=" " />

</FrameLayout>
