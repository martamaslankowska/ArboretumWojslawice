<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="route"
            type="arboretum.arboretumwojslawice.Model.businessentity.Route"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_back"
            layout="@layout/toolbar_empty" />


        <android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            tools:context="arboretum.arboretumwojslawice.View.activities.RouteDetailActivity">

            <ImageView
                android:id="@+id/route_detail_map"
                android:layout_width="match_parent"
                android:layout_height="@dimen/route_detail_map_height"
                android:minHeight="@dimen/route_detail_map_minheight"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@{route.getMapImage()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/route_detail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="20dp"
                android:layout_marginStart="8dp"
                android:text="@{route.getStringId()}"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/route_detail_map" />

            <TextView
                android:id="@+id/route_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:layout_below="@+id/route_detail_map"
                android:layout_toRightOf="@+id/route_detail_id"
                android:text="@{route.getName()}"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/route_detail_id"
                app:layout_constraintTop_toBottomOf="@+id/route_detail_map" />

            <TextView
                android:id="@+id/route_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@{route.getDescription()}"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/route_detail_name" />

            <RelativeLayout
                android:id="@+id/route_detail_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/route_detail_button"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/route_detail_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/route_detail_description">

                <ImageView
                    android:id="@+id/route_detail_left_arrow"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/plant_page_image_height"
                    android:layout_alignParentLeft="true" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/plant_page_image_height"
                    android:layout_toEndOf="@+id/route_detail_left_arrow"
                    android:layout_toStartOf="@+id/route_detail_right_arrow" />

                <ImageView
                    android:id="@+id/route_detail_right_arrow"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/plant_page_image_height"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow" />


            </RelativeLayout>

            <Button
                android:id="@+id/route_detail_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="NAWIGUJ"
                android:textSize="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</layout>