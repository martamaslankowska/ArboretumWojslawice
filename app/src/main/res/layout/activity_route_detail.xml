<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="route"
            type="arboretum.arboretumwojslawice.Model.businessentity.Route"/>
    </data>

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        tools:context="arboretum.arboretumwojslawice.View.RouteDetail">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/route_detail_map_height"
            android:id="@+id/route_detail_map"
            android:src="@{route.getMapImage()}"/>

        <TextView
            android:id="@+id/route_detail_id"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/route_detail_map"
            android:text="@{route.getStringId()}"/>

        <TextView
            android:id="@+id/route_detail_name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/route_detail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/route_detail_map"
            android:text="@{route.getName()}"/>

        <TextView
            android:id="@+id/route_detail_description"
            android:layout_below="@id/route_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:text="@{route.getDescription()}"/>

    </RelativeLayout>
</layout>