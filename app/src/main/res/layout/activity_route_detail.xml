<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="route"
            type="arboretum.arboretumwojslawice.Model.businessentity.Route" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_back"
            layout="@layout/toolbar_empty" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            tools:context="arboretum.arboretumwojslawice.View.activities.RouteDetailActivity">

            <ImageView
                android:id="@+id/route_detail_map"
                android:layout_width="match_parent"
                android:layout_height="@dimen/route_detail_map_height"
                android:src="@{route.getMapImageDetailed()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--<TextView-->
            <!--android:id="@+id/route_detail_id"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:minWidth="20dp"-->
            <!--android:layout_marginStart="8dp"-->
            <!--android:text="@{route.getStringId()}"-->
            <!--android:textSize="18dp"-->
            <!--android:textStyle="bold"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/route_detail_map" />-->

            <TextView
                android:id="@+id/route_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/route_detail_map"
                android:minWidth="100dp"
                android:text="@{route.getName()}"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/route_scroll_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/route_detail_map"
                app:layout_constraintVertical_chainStyle="spread" />

            <ScrollView
                android:id="@+id/route_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:fillViewport="true"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toTopOf="@+id/route_detail_pager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/route_detail_name"
                app:layout_constraintVertical_chainStyle="packed">

                <TextView
                    android:id="@+id/route_detail_description"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@{route.getDescription()}"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="0dp" />
            </ScrollView>

            <RelativeLayout
                android:id="@+id/route_detail_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/route_detail_button"
                app:layout_constraintBottom_toTopOf="@+id/route_detail_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/route_scroll_view"
                app:layout_constraintVertical_chainStyle="packed">

                <ImageView
                    android:id="@+id/route_detail_left_arrow"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/plant_page_image_height"
                    android:layout_alignParentLeft="true" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/plant_page_image_height"
                    android:layout_toEndOf="@+id/route_detail_left_arrow"
                    android:layout_toStartOf="@+id/route_detail_right_arrow" />

                <ImageView
                    android:id="@+id/route_detail_right_arrow"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/plant_page_image_height"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow" />


            </RelativeLayout>

            <Button
                android:id="@+id/route_detail_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="NAWIGUJ"
                android:textSize="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/route_detail_pager"
                app:layout_constraintVertical_chainStyle="packed" />


        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</layout>